---
import Header from '../components/Header.astro'
import Layout from '../layouts/Layout.astro'
import Nav from '../components/Nav.astro'
import SectionPosts from '../components/SectionPosts.astro'
import SectionBridgePhrase from '../components/SectionBridgePhrase.astro'
import SectionMarquee from '../components/Marquee.astro'
import SectionInterlude from '../components/SectionInterlude.astro'
import SectionAbout from '../components/SectionAbout.astro'
import Footer from '../components/Footer.astro'

const contentFile = await import('../content/index.md')
const { frontmatter } = contentFile;
---
<Layout>
	<Header data={frontmatter}/>
	<main>
		<div class="content">
			<SectionPosts />
			<SectionBridgePhrase phrase={frontmatter.phrase} />
			<SectionMarquee words={frontmatter.marquee} />
			<!-- <SectionInterlude /> -->
			<SectionAbout about={frontmatter.about} doc={frontmatter.aboutDoc} email={frontmatter.email} image={frontmatter.backgroundImage} />
		</div>
	</main>
	<Footer />
</Layout>
